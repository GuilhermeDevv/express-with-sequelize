{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2021",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true, // Permite importar arquivos JSON como módulos
    "declaration": true, // Gera arquivos de declaração (.d.ts) para seus módulos
    "rootDir": "./src", // Diretório raiz dos arquivos TypeScript
    "typeRoots": ["./node_modules/@types"], // Onde procurar arquivos de tipos de terceiros
    "types": ["node"], // Tipos padrão incluídos
    "allowSyntheticDefaultImports": true // Permite imports sintéticos padrão
  },
  "include": ["src/**/*.ts"], // Arquivos TypeScript a serem incluídos
  "exclude": ["node_modules", "dist"] // Pastas a serem excluídas da compilação
}
